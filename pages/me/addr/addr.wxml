<view class="addr app-page">
    <van-nav-bar bind:click-left="navBarClickLeft" fixed border="{{false}}" class="page-nav-bar">
        <view slot="left">
            <text class="iconfont icon-houtui pr-sm"></text>
            <text class="text">我的收货地址</text>
        </view>
    </van-nav-bar>
    <van-empty description="暂无订单" custom-class="empt-cust" class="empt" wx:if="{{false}}"></van-empty>
    <van-cell-goup class="addresses">
        <van-cell wx-else label="{{item.region}} {{item.detail_addr}}" is-link bind:tap="emitAddr" data-item="{{item}}" wx:for="{{addresses}}">
            <view slot="title">
                <text class="iconfont icon-iconset0391 mr-base" wx:if="{{item.current_addr == 1}}"></text>
                <text>{{item.name}} {{item.phone}}</text>
            </view>
        </van-cell>
    </van-cell-goup>
    <view bind:tap="addAddr" class="add-butt-layo"
        style="position:fixed; left: 0; bottom: 0; box-sizing: border-box; padding: 8px; width:100%;">
        <van-button color="{{cPLg}}" block>添加收货地址</van-button>
    </view>
</view>