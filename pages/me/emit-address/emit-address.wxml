<view class="add-address">
    <van-nav-bar bind:click-left="navBarClickLeft" fixed border="{{false}}" class="page-nav-bar">
        <view slot="left">
            <text class="iconfont icon-houtui pr-sm"></text>
            <text class="text">修改收货地址</text>
        </view>
    </van-nav-bar>
    <van-field label="收货人" placeholder="请填写用户名" custom-class="field" modulesel:value="{{ name }}"></van-field>
    <van-field label="手机号码" placeholder="请填写手机号码" custom-class="field" modulesel:value="{{ phone }}"></van-field>
    <van-field label="所在地区" placeholder="请填写所在地区" custom-class="field" modulesel:value="{{ region }}"></van-field>
    <van-field label="详细地址" placeholder="请填写详细地址" custom-class="field" modulesel:value="{{ detailAddr }}"></van-field>
    <van-cell title="默认地址">
        <van-switch checked="{{ currentAddr }}" active-color="{{cPLg}}" inactive-color="#989898" bind:change="defaultAddrUpdate" />
    </van-cell>
    <view bind:tap="addAddr" class="add-butt-layout"
        style="position:fixed; left: 0; bottom: 0; box-sizing: border-box; padding: 8px; width:100%;">
        <van-button color="{{cPLg}}" block bind:tap="save">保存</van-button>
    </view>
    <van-toast selector="#van-toast" id="van-toast"></van-toast>
</view>